@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<ul>
    @foreach (var category in ViewBag.categories)
    {
        <li><a asp-controller="Cheese" asp-action="Index" asp-route-id="@category.ID">@category.Name</a></li>
    }
</ul>
<a asp-controller="Category" asp-action="Add">Add Category</a>

